doctype html
html
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=Edge')
    meta(property='og:title', content=title)
    meta(property='og:type', content='article')
    meta(property='og:url', content=selfUrl)
    meta(property='og:image', content='https://e2d3api.blob.core.windows.net/thumbnails/'+path)
    meta(property='og:site_name', content='E2D3')
    title= title
    base#e2d3-base(href='.')
    style.
      html, body, figure {
        width: 100%;
        height: 100%;
        margin: 0px;
        padding: 0px;
        text-align: center;
      }
      #e2d3-chart-area {
        width: 100%;
        height: 100%;
      }
  body
    figure#e2d3-chart-area
    script(src='/libs/e2d3.js', data-base-url=baseUrl, data-script-type=scriptType, data-data-url=dataUrl, data-data-type=dataType)
